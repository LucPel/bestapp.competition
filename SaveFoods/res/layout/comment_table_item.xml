<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <RelativeLayout 
        android:id="@+id/comment_grid_chat_bubble"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/chat_bubbles_owner">
            
        <TextView
            android:id="@+id/comment_grid_item_text_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/label"
            android:textColor="@color/lime_owner_comment"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/comment_grid_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_grid_item_text_user"
            android:layout_marginTop="5dp"
            android:text="@+id/label"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>

        
         

    </RelativeLayout>
        


</RelativeLayout>